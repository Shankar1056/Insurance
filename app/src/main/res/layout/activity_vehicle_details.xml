<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rvActionBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:contentDescription="@null"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15sp"
            android:layout_toRightOf="@id/ivHome"
            android:text="@string/FindDetails"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/rvClick"
            android:layout_width="130dp"
            android:layout_height="match_parent"></RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="false"
        android:layout_below="@+id/rvActionBar"
        card_view:contentPadding="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/bike" />

            <TextView
                android:id="@+id/tvVechicleNumber"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:text="KA-1254Lka"
                fontPath="fonts/CeliasBold.otf"
                tools:ignore="MissingPrefix"
                tool:text="KA-1254Lka" />

            <TextView
                android:id="@+id/tvVechicleName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:text="Royal enfield classic 350"
                fontPath="fonts/CeliasMedium.otf"
                tools:ignore="MissingPrefix"
               />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvPostItemFor"
                android:background="@color/colorstroke"></RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/owner"
                    android:textColor="@color/colorBlack"
                    fontPath="fonts/CeliasMedium.otf"
                    tools:ignore="MissingPrefix"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ownerName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bottom_line_gray"
                    android:maxLines="1"
                    android:text="Murugan"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/makeyear"
                    android:textColor="@color/colorBlack"
                    fontPath="fonts/CeliasMedium.otf"
                    tools:ignore="MissingPrefix"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/makeyear"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bottom_line_gray"
                    android:maxLines="1"
                    android:text="2015"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/address"
                    android:textColor="@color/colorBlack"
                    fontPath="fonts/CeliasMedium.otf"
                    tools:ignore="MissingPrefix"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bottom_line_gray"
                    android:maxLines="1"
                    android:text="Vallabhai main road first cross 573201"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/Chaisino"
                    android:textColor="@color/colorBlack"
                    fontPath="fonts/CeliasMedium.otf"
                    tools:ignore="MissingPrefix"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/chasinumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bottom_line_gray"
                    android:maxLines="1"
                    android:text="25874"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/Engno"
                    android:textColor="@color/colorBlack"
                    fontPath="fonts/CeliasMedium.otf"
                    tools:ignore="MissingPrefix"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/enginenumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bottom_line_gray"
                    android:maxLines="1"
                    android:text="25874"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/Idv"
                    android:textColor="@color/colorBlack"
                    fontPath="fonts/CeliasMedium.otf"
                    tools:ignore="MissingPrefix"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/idvvalue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bottom_line_gray"
                    android:maxLines="1"
                    android:text="25874"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorsBlueOpacity"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorsBlue"
                fontPath="fonts/CeliasBold.otf"
                tools:ignore="MissingPrefix"
                android:textSize="18dp"
                android:visibility="gone"
                android:text="@string/PreviuosPolicy" />

           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/Inusurance"
                android:textColor="@color/colorBlack"
                fontPath="fonts/CeliasMedium.otf"
                tools:ignore="MissingPrefix"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_bottom_line_gray"
                android:maxLines="1"
                android:text="jeevan bhima policy"
                android:visibility="gone"
                android:textColor="@color/colorGray"
                android:textSize="14sp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/insuranceFrom"
                        android:textColor="@color/colorBlack"
                        fontPath="fonts/CeliasMedium.otf"
                        tools:ignore="MissingPrefix"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bottom_line_gray"
                        android:maxLines="1"
                        android:text="25/7/2005"
                        android:textColor="@color/colorGray"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/insuranceto"
                        android:textColor="@color/colorBlack"
                        fontPath="fonts/CeliasMedium.otf"
                        tools:ignore="MissingPrefix"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bottom_line_gray"
                        android:maxLines="1"
                        android:textColor="@color/colorGray"
                        android:text="25/7/2005"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnProceed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:text="@string/proceed"
                android:background="@drawable/gradient"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                fontPath="fonts/CeliasBold.otf"
                android:textSize="18dp"
                tools:ignore="MissingPrefix"/>

        </LinearLayout>

    </ScrollView>
    </android.support.v7.widget.CardView>


</RelativeLayout>
